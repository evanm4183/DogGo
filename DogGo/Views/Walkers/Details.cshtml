@model DogGo.Models.ViewModels.WalkerViewModel

@{
    ViewData["Title"] = "Profile";
}
<div>
    <h1 class="mb-4">@Model.Walker.Name</h1>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src="https://upload.wikimedia.org/wikipedia/commons/a/a0/Font_Awesome_5_regular_user-circle.svg" />
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Neighborhood.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Total Walk Time:</label>
            <span>@(Model.TotalWalkTime / 3600)hr @((Model.TotalWalkTime / 60) % 60)min</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Walks</h1>

            <div class="row">
                @foreach (Walk w in Model.Walks)
                {
                    <div class="card m-4" style="width: 18rem;">
                        <div class="card-body">
                            <div>
                                <label class="font-weight-bold">Date:</label>
                                <span>@w.Date.ToString()</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Client:</label>
                                <span>@w.Client.Name</span>
                            </div>
                            <div>
                                <label class="font-weight-bold">Duration:</label>
                                <span>@(w.Duration / 60) min</span>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </section>
    </div>
</div>
